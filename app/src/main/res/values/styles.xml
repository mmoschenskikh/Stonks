<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StonksAppText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargeText" parent="StonksAppText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="SearchSuggestionsTitle" parent="LargeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">@dimen/search_suggestion_margin_bottom</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SearchResultTitle" parent="LargeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="StockTextLarge" parent="LargeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="SummaryTitle" parent="LargeText">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginBottom">11dp</item>
    </style>

    <style name="DetailsTickerText" parent="LargeText" />

    <style name="SmallText" parent="StonksAppText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="SearchSuggestion" parent="SmallText" />

    <style name="StockTextSmall" parent="SmallText" />

    <style name="SideActionText" parent="SmallText" />

    <style name="DetailsCompanyNameText" parent="SmallText" />

    <style name="SummaryText" parent="SmallText" />

    <style name="ListEmptyText" parent="StonksAppText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabLayoutTextSelected">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">32sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayoutText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">24sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DetailsTabSelected" parent="LargeText" />

    <style name="DetailsTab">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">20sp</item>
    </style>
</resources>
